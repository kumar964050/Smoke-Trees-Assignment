doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css')
  link(rel='stylesheet', href='/index.css')
  title Welcome to SmokeTrees
  style.
    .max-600 {
    max-width: 600px;
    }
body
  .container.vh-100.d-flex.flex-column.justify-content-center
    .text-center
      h1 Welcome to SmokeTrees
      p Please register below:
      p
        a(href='/users') list of users
      form.d-flex.flex-column.justify-content-center.align-items-center
        .mb-1.w-100.max-600
          label.form-label.d-flex.w-100(for='name') Please enter your name
          input#name.form-control.max-600.mb-2.w-100(type='text', placeholder='Name', required='')
        .mb-1.w-100.max-600
          label.form-label.d-flex.w-100(for='address') Please enter your address
          textarea#address.form-control.max-600.mb-2.w-100(rows='3', placeholder='Address here')
        button.btn.btn-primary.max-600.w-100(type='submit') Register
  script(type='text/javascript', src='/index.js')
